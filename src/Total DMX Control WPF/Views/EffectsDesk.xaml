        </GroupBox>
        <GroupBox Header="Tap Sync" Foreground="White" Height="311" HorizontalAlignment="Left" Margin="688,338,0,0" Name="groupBox6" VerticalAlignment="Top" Width="240">
            <Grid Height="280" Name="tapsync" Width="230">
